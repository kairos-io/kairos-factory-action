{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/reusable-factory\\.yaml$"
      ],
      "matchStrings": [
        "kairos_version:\\s*\\n\\s*type: string\\s*\\n\\s*default: \"(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases", 
      "depNameTemplate": "kairos-io/kairos",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch": [
        "^README\\.md$"
      ],
      "matchStrings": [
        "\\| `kairos_version` \\| Kairos version for fallback Dockerfile \\| ‚ùå \\| `(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)` \\|"
      ],
      "datasourceTemplate": "github-releases", 
      "depNameTemplate": "kairos-io/kairos",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchDepNames": ["kairos-io/kairos"],
      "commitMessageTopic": "kairos_version"
    }
  ]
}
